<Page xmlns="http://schemas.nativescript.org/tns.xsd">
    <ActionBar title="Contact">
        <NavigationButton text="Back" tap="goBack"></NavigationButton>
    </ActionBar>

    <!--=============== Main Content ===============-->

    <ScrollView>
        <StackLayout class="p-6">
            <Label text="Let's Work Together" class="text-6xl md:text-6xl font-bold tracking-sm text-green" textWrap="true"/>
            <Label text="Abigailbrandonn@gmail.com" class="text-lg my-6"/>

            <Image src="https://lh3.googleusercontent.com/a/ACg8ocLr4T0D3ogDStByZp3gnZsXRPk0kdSmEOJs9zOynFAmEdg=s576-c-no" stretch="aspectFill" width="236" height="213" class="rectangle-41 mt-5 mb-10"/>

            <TextField hint="Your Full Name" class="input-field mb-4"/>
            <TextField hint="Your email address" keyboardType="email" class="input-field mb-4"/>
            <TextField hint="Your phone number (optional)" keyboardType="phone" class="input-field mb-4"/>

            <TextView hint="Write your message here" class="input-field h-24 mb-8"/>

            <StackLayout >
                <Button text="SUBMIT" tap="onSubmitTap" class="rounded-full button -primary" style="background-color: #64EC82;"></Button>
                <Button text="HOME" tap="onHomeTap" class="rounded-full button -primary" style="background-color: #64EC82;"></Button>
            </StackLayout>
            
        </StackLayout>
    </ScrollView>

</Page>