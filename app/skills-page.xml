<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="onPageLoaded">
  <ActionBar title="Skills">
    <NavigationButton text="Back" tap="goBack"></NavigationButton>
  </ActionBar>

  <ScrollView class="bg-gray-900 h-full p-6">
    <StackLayout>
      <Label text="Education and Experience" class="text-3xl text-green-500 mb-8" />
      <Repeater items="{{ timelineItems }}">
        <Repeater.itemTemplate>
          <StackLayout>
            <Label text="{{ year }}" class="text-gray-300 mb-2" />
            <Repeater items="{{ entries }}">
              <Repeater.itemTemplate>
                <StackLayout class="mb-6 pl-4">
                  <Label text="{{ title }}" class="text-gray-100 text-lg" />
                  <Label text="{{ subtitle }}" class="text-gray-400" />
                </StackLayout>
              </Repeater.itemTemplate>
            </Repeater>
          </StackLayout>
        </Repeater.itemTemplate>
      </Repeater>
    </StackLayout>
  </ScrollView>
</Page>





